@prefix brick: <https://brickschema.org/schema/Brick#> .
@prefix hpfs: <urn:hpflex/shapes#> .
@prefix qudt: <http://qudt.org/schema/qudt/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ref: <https://brickschema.org/schema/Brick/ref#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix unit: <http://qudt.org/vocab/unit/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

hpfs:coo-set a rdfs:Class,
        sh:NodeShape ;
    sh:class brick:Zone_Air_Cooling_Temperature_Setpoint ;
    sh:property hpfs:coo-set_K,
        hpfs:coo-set_ref .

hpfs:hea-set a rdfs:Class,
        sh:NodeShape ;
    sh:class brick:Zone_Air_Heating_Temperature_Setpoint ;
    sh:property hpfs:hea-set_K,
        hpfs:hea-set_ref .

hpfs:ref a rdfs:Class,
        sh:NodeShape ;
    sh:class ref:BOPTestReference ;
    sh:property hpfs:ref_name .

hpfs:temp a rdfs:Class,
        sh:NodeShape ;
    sh:class brick:Zone_Air_Temperature_Sensor ;
    sh:property hpfs:temp_K,
        hpfs:temp_ref .

hpfs:zone a rdfs:Class,
        sh:NodeShape ;
    sh:class brick:HVAC_Zone ;
    sh:property hpfs:zone_coo-set,
        hpfs:zone_hea-set,
        hpfs:zone_temp .

hpfs:connectsAnnotation a sh:NodeShape ;
    sh:rule hpfs:connectsAnnotationRule ;
    sh:targetSubjectsOf brick:feeds .

hpfs:coo-setAnnotation a sh:NodeShape ;
    sh:rule hpfs:coo-setAnnotationRule ;
    sh:targetClass brick:Zone_Air_Cooling_Temperature_Setpoint .

hpfs:hea-setAnnotation a sh:NodeShape ;
    sh:rule hpfs:hea-setAnnotationRule ;
    sh:targetClass brick:Zone_Air_Heating_Temperature_Setpoint .

hpfs:refAnnotation a sh:NodeShape ;
    sh:rule hpfs:refAnnotationRule ;
    sh:targetClass ref:BOPTestReference .

hpfs:tempAnnotation a sh:NodeShape ;
    sh:rule hpfs:tempAnnotationRule ;
    sh:targetClass brick:Zone_Air_Temperature_Sensor .

hpfs:zoneAnnotation a sh:NodeShape ;
    sh:rule hpfs:zoneAnnotationRule ;
    sh:targetClass brick:HVAC_Zone .

hpfs:connectsAnnotationRule a sh:SPARQLRule ;
    sh:construct """
                CONSTRUCT {
                    ?name <urn:hpflex/shapes#connects> ?target .
                }
                WHERE {
	?name <https://brickschema.org/schema/Brick#feeds> ?target . 
	?target <https://brickschema.org/schema/Brick#feed> ?name . 
}""" .

hpfs:coo-setAnnotationRule a sh:TripleRule ;
    sh:condition hpfs:coo-set ;
    sh:object hpfs:coo-set ;
    sh:predicate rdf:type ;
    sh:subject sh:this .

hpfs:coo-set_K a sh:PropertyShape ;
    sh:hasValue unit:K ;
    sh:minCount 1 ;
    sh:path qudt:hasUnit .

hpfs:coo-set_ref a sh:PropertyShape ;
    sh:minCount 1 ;
    sh:path ref:hasExternalReference .

hpfs:hea-setAnnotationRule a sh:TripleRule ;
    sh:condition hpfs:hea-set ;
    sh:object hpfs:hea-set ;
    sh:predicate rdf:type ;
    sh:subject sh:this .

hpfs:hea-set_K a sh:PropertyShape ;
    sh:hasValue unit:K ;
    sh:minCount 1 ;
    sh:path qudt:hasUnit .

hpfs:hea-set_ref a sh:PropertyShape ;
    sh:minCount 1 ;
    sh:path ref:hasExternalReference .

hpfs:refAnnotationRule a sh:TripleRule ;
    sh:condition hpfs:ref ;
    sh:object hpfs:ref ;
    sh:predicate rdf:type ;
    sh:subject sh:this .

hpfs:ref_name a sh:PropertyShape ;
    sh:minCount 1 ;
    sh:path ref:name .

hpfs:tempAnnotationRule a sh:TripleRule ;
    sh:condition hpfs:temp ;
    sh:object hpfs:temp ;
    sh:predicate rdf:type ;
    sh:subject sh:this .

hpfs:temp_K a sh:PropertyShape ;
    sh:hasValue unit:K ;
    sh:minCount 1 ;
    sh:path qudt:hasUnit .

hpfs:temp_ref a sh:PropertyShape ;
    sh:minCount 1 ;
    sh:path ref:hasExternalReference .

hpfs:zoneAnnotationRule a sh:TripleRule ;
    sh:condition hpfs:zone ;
    sh:object hpfs:zone ;
    sh:predicate rdf:type ;
    sh:subject sh:this .

hpfs:zone_coo-set a sh:PropertyShape ;
    sh:minCount 3 ;
    sh:path brick:hasPoint ;
    sh:qualifiedMinCount 1 ;
    sh:qualifiedValueShape hpfs:zone_coo-set-1 .

hpfs:zone_coo-set-1 a sh:NodeShape ;
    rdfs:label "zone_coo-set-1" ;
    sh:class hpfs:coo-set .

hpfs:zone_hea-set a sh:PropertyShape ;
    sh:path brick:hasPoint ;
    sh:qualifiedMinCount 1 ;
    sh:qualifiedValueShape hpfs:zone_hea-set-1 .

hpfs:zone_hea-set-1 a sh:NodeShape ;
    rdfs:label "zone_hea-set-1" ;
    sh:class hpfs:hea-set .

hpfs:zone_temp a sh:PropertyShape ;
    sh:path brick:hasPoint ;
    sh:qualifiedMinCount 1 ;
    sh:qualifiedValueShape hpfs:zone_temp-1 .

hpfs:zone_temp-1 a sh:NodeShape ;
    rdfs:label "zone_temp-1" ;
    sh:class hpfs:temp .

