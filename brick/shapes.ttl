@prefix brick: <https://brickschema.org/schema/Brick#> .
@prefix hpfs: <urn:hpflex/shapes#> .
@prefix qudt: <http://qudt.org/schema/qudt/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ref: <https://brickschema.org/schema/Brick/ref#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

hpfs:cooset a rdfs:Class,
        sh:NodeShape ;
    sh:class brick:Zone_Air_Cooling_Temperature_Setpoint ;
    sh:property hpfs:cooset_K,
        hpfs:cooset_ref .

hpfs:heaset a rdfs:Class,
        sh:NodeShape ;
    sh:class brick:Zone_Air_Heating_Temperature_Setpoint ;
    sh:property hpfs:heaset_K,
        hpfs:heaset_ref .

hpfs:ref a rdfs:Class,
        sh:NodeShape ;
    sh:class ref:BOPTestReference .

hpfs:temp a rdfs:Class,
        sh:NodeShape ;
    sh:class brick:Zone_Air_Temperature_Sensor ;
    sh:property hpfs:temp_K,
        hpfs:temp_ref .

hpfs:zone a rdfs:Class,
        sh:NodeShape ;
    sh:class brick:Zone ;
    sh:property hpfs:zone_cooset,
        hpfs:zone_heaset,
        hpfs:zone_temp .

hpfs:coosetAnnotation a sh:NodeShape ;
    sh:rule hpfs:coosetAnnotationRule ;
    sh:targetClass brick:Zone_Air_Cooling_Temperature_Setpoint .

hpfs:has-pointAnnotation a sh:NodeShape ;
    sh:rule hpfs:has-pointAnnotationRule ;
    sh:targetSubjectsOf brick:hasPoint .

hpfs:heasetAnnotation a sh:NodeShape ;
    sh:rule hpfs:heasetAnnotationRule ;
    sh:targetClass brick:Zone_Air_Heating_Temperature_Setpoint .

hpfs:refAnnotation a sh:NodeShape ;
    sh:rule hpfs:refAnnotationRule ;
    sh:targetClass ref:BOPTestReference .

hpfs:tempAnnotation a sh:NodeShape ;
    sh:rule hpfs:tempAnnotationRule ;
    sh:targetClass brick:Zone_Air_Temperature_Sensor .

hpfs:zoneAnnotation a sh:NodeShape ;
    sh:rule hpfs:zoneAnnotationRule ;
    sh:targetClass brick:Zone .

hpfs:coosetAnnotationRule a sh:TripleRule ;
    sh:condition hpfs:cooset ;
    sh:object hpfs:cooset ;
    sh:predicate rdf:type ;
    sh:subject sh:this .

hpfs:cooset_K a sh:PropertyShape ;
    sh:hasValue qudt:K ;
    sh:minCount 1 ;
    sh:path qudt:hasUnit .

hpfs:cooset_ref a sh:PropertyShape ;
    sh:minCount 1 ;
    sh:path ref:hasExternalReference .

hpfs:has-pointAnnotationRule a sh:SPARQLRule ;
    sh:construct """
                CONSTRUCT {
                    ?name <urn:hpflex/shapes#has-point> ?target .
                }
                WHERE {
	?name <https://brickschema.org/schema/Brick#hasPoint> ?target . 
}""" .

hpfs:heasetAnnotationRule a sh:TripleRule ;
    sh:condition hpfs:heaset ;
    sh:object hpfs:heaset ;
    sh:predicate rdf:type ;
    sh:subject sh:this .

hpfs:heaset_K a sh:PropertyShape ;
    sh:hasValue qudt:K ;
    sh:minCount 1 ;
    sh:path qudt:hasUnit .

hpfs:heaset_ref a sh:PropertyShape ;
    sh:minCount 1 ;
    sh:path ref:hasExternalReference .

hpfs:refAnnotationRule a sh:TripleRule ;
    sh:condition hpfs:ref ;
    sh:object hpfs:ref ;
    sh:predicate rdf:type ;
    sh:subject sh:this .

hpfs:tempAnnotationRule a sh:TripleRule ;
    sh:condition hpfs:temp ;
    sh:object hpfs:temp ;
    sh:predicate rdf:type ;
    sh:subject sh:this .

hpfs:temp_K a sh:PropertyShape ;
    sh:hasValue qudt:K ;
    sh:minCount 1 ;
    sh:path qudt:hasUnit .

hpfs:temp_ref a sh:PropertyShape ;
    sh:minCount 1 ;
    sh:path ref:hasExternalReference .

hpfs:zoneAnnotationRule a sh:TripleRule ;
    sh:condition hpfs:zone ;
    sh:object hpfs:zone ;
    sh:predicate rdf:type ;
    sh:subject sh:this .

hpfs:zone_cooset a sh:PropertyShape ;
    sh:path brick:hasPoint ;
    sh:qualifiedMinCount 1 ;
    sh:qualifiedValueShape hpfs:zone_cooset-1 .

hpfs:zone_cooset-1 a sh:NodeShape ;
    rdfs:label "zone_cooset-1" ;
    sh:class hpfs:cooset .

hpfs:zone_heaset a sh:PropertyShape ;
    sh:minCount 3 ;
    sh:path brick:hasPoint ;
    sh:qualifiedMinCount 1 ;
    sh:qualifiedValueShape hpfs:zone_heaset-1 .

hpfs:zone_heaset-1 a sh:NodeShape ;
    rdfs:label "zone_heaset-1" ;
    sh:class hpfs:heaset .

hpfs:zone_temp a sh:PropertyShape ;
    sh:path brick:hasPoint ;
    sh:qualifiedMinCount 1 ;
    sh:qualifiedValueShape hpfs:zone_temp-1 .

hpfs:zone_temp-1 a sh:NodeShape ;
    rdfs:label "zone_temp-1" ;
    sh:class hpfs:temp .

