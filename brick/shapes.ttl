@prefix brick: <https://brickschema.org/schema/Brick#> .
@prefix hpfs: <urn:hpflex/shapes#> .
@prefix qudt: <http://qudt.org/schema/qudt/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ref: <https://brickschema.org/schema/Brick/ref#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix unit: <http://qudt.org/vocab/unit/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

hpfs:building a rdfs:Class,
        sh:NodeShape ;
    sh:class brick:Building ;
    sh:property hpfs:building_zone .

hpfs:ref a rdfs:Class,
        sh:NodeShape ;
    sh:class ref:BOPTestReference ;
    sh:property hpfs:ref_name .

hpfs:temperature a rdfs:Class,
        sh:NodeShape ;
    sh:class brick:Zone_Air_Temperature_Sensor ;
    sh:property hpfs:temperature_Kelvin,
        hpfs:temperature_ref .

hpfs:temperature-setpoint a rdfs:Class,
        sh:NodeShape ;
    sh:class brick:Zone_Air_Temperature_Setpoint ;
    sh:property hpfs:temperature-setpoint_Kelvin,
        hpfs:temperature-setpoint_ref .

hpfs:zone a rdfs:Class,
        sh:NodeShape ;
    sh:class brick:HVAC_Zone ;
    sh:property hpfs:zone_temperature,
        hpfs:zone_temperature-setpoint-cooling,
        hpfs:zone_temperature-setpoint-heating .

hpfs:buildingAnnotation a sh:NodeShape ;
    sh:rule hpfs:buildingAnnotationRule ;
    sh:targetClass brick:Building .

hpfs:connectsAnnotation a sh:NodeShape ;
    sh:rule hpfs:connectsAnnotationRule ;
    sh:targetSubjectsOf brick:feeds .

hpfs:refAnnotation a sh:NodeShape ;
    sh:rule hpfs:refAnnotationRule ;
    sh:targetClass ref:BOPTestReference .

hpfs:temperature-setpointAnnotation a sh:NodeShape ;
    sh:rule hpfs:temperature-setpointAnnotationRule ;
    sh:targetClass brick:Zone_Air_Temperature_Setpoint .

hpfs:temperatureAnnotation a sh:NodeShape ;
    sh:rule hpfs:temperatureAnnotationRule ;
    sh:targetClass brick:Zone_Air_Temperature_Sensor .

hpfs:zoneAnnotation a sh:NodeShape ;
    sh:rule hpfs:zoneAnnotationRule ;
    sh:targetClass brick:HVAC_Zone .

hpfs:buildingAnnotationRule a sh:TripleRule ;
    sh:condition hpfs:building ;
    sh:object hpfs:building ;
    sh:predicate rdf:type ;
    sh:subject sh:this .

hpfs:building_zone a sh:PropertyShape ;
    sh:minCount 1 ;
    sh:path brick:hasPart ;
    sh:qualifiedMinCount 1 ;
    sh:qualifiedValueShape hpfs:building_zone-1 .

hpfs:building_zone-1 a sh:NodeShape ;
    rdfs:label "building_zone-1" ;
    sh:class hpfs:zone .

hpfs:connectsAnnotationRule a sh:SPARQLRule ;
    sh:construct """
                CONSTRUCT {
                    ?name <urn:hpflex/shapes#connects> ?target .
                }
                WHERE {
	?target <https://brickschema.org/schema/Brick#feed> ?name . 
	?name <https://brickschema.org/schema/Brick#feeds> ?target . 
}""" .

hpfs:refAnnotationRule a sh:TripleRule ;
    sh:condition hpfs:ref ;
    sh:object hpfs:ref ;
    sh:predicate rdf:type ;
    sh:subject sh:this .

hpfs:ref_name a sh:PropertyShape ;
    sh:minCount 1 ;
    sh:path ref:name .

hpfs:temperature-setpointAnnotationRule a sh:TripleRule ;
    sh:condition hpfs:temperature-setpoint ;
    sh:object hpfs:temperature-setpoint ;
    sh:predicate rdf:type ;
    sh:subject sh:this .

hpfs:temperature-setpoint_Kelvin a sh:PropertyShape ;
    sh:hasValue unit:Kelvin ;
    sh:minCount 1 ;
    sh:path qudt:hasUnit .

hpfs:temperature-setpoint_ref a sh:PropertyShape ;
    sh:minCount 1 ;
    sh:path ref:hasExternalReference .

hpfs:temperatureAnnotationRule a sh:TripleRule ;
    sh:condition hpfs:temperature ;
    sh:object hpfs:temperature ;
    sh:predicate rdf:type ;
    sh:subject sh:this .

hpfs:temperature_Kelvin a sh:PropertyShape ;
    sh:hasValue unit:Kelvin ;
    sh:minCount 1 ;
    sh:path qudt:hasUnit .

hpfs:temperature_ref a sh:PropertyShape ;
    sh:minCount 1 ;
    sh:path ref:hasExternalReference .

hpfs:zoneAnnotationRule a sh:TripleRule ;
    sh:condition hpfs:zone ;
    sh:object hpfs:zone ;
    sh:predicate rdf:type ;
    sh:subject sh:this .

hpfs:zone_temperature a sh:PropertyShape ;
    sh:path brick:hasPoint ;
    sh:qualifiedMinCount 1 ;
    sh:qualifiedValueShape hpfs:zone_temperature-1 .

hpfs:zone_temperature-1 a sh:NodeShape ;
    rdfs:label "zone_temperature-1" ;
    sh:class hpfs:temperature .

hpfs:zone_temperature-setpoint-cooling a sh:PropertyShape ;
    sh:minCount 3 ;
    sh:path brick:hasPoint ;
    sh:qualifiedMinCount 1 ;
    sh:qualifiedValueShape hpfs:zone_temperature-setpoint-cooling-1 .

hpfs:zone_temperature-setpoint-cooling-1 a sh:NodeShape ;
    rdfs:label "zone_temperature-setpoint-cooling-1" ;
    sh:class hpfs:temperature-setpoint .

hpfs:zone_temperature-setpoint-heating a sh:PropertyShape ;
    sh:path brick:hasPoint ;
    sh:qualifiedMinCount 1 ;
    sh:qualifiedValueShape hpfs:zone_temperature-setpoint-heating-1 .

hpfs:zone_temperature-setpoint-heating-1 a sh:NodeShape ;
    rdfs:label "zone_temperature-setpoint-heating-1" ;
    sh:class hpfs:temperature-setpoint .

